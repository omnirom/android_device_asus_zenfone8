<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>

    <!-- Doze: does this device support STATE_DOZE?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Max visible notification icons -->
    <integer name="config_maxVisibleNotificationIcons">8</integer>
    <integer name="config_maxVisibleNotificationIconsWhenDark">9</integer>

    <!-- Color of the FOD view -->
    <color name="config_fodColor">#FFFFFFE6</color>

    <bool name="keyguard_security_container_force_bottom_margin">true</bool>

    <!-- Default rounded corner curve (a Bezier). Must match (the curved path in) rounded.xml.
         Note that while rounded.xml includes the entire path (including the horizontal and vertical
         corner edges), this pulls out just the curve.
     -->
    <string name="config_rounded_mask" translatable="false">
        M 145.27,0
        c -9.91,0 -36.06,0.17 -53.76,3.57
        C 71.64,7.4 50.16,15.4 32.78,32.78
        S 7.4,71.64 3.57,91.51
        C 0.17,109.21 0,135.36 0,145.27
        V 0
        Z
    </string>

    <!-- The maximum count of notifications on Keyguard. The rest will be collapsed in an overflow
     card. -->
    <integer name="keyguard_max_notification_count">2</integer>

    <color name="config_udfpsColor">#FFFFFFE6</color>

    <!-- HBM type of UDFPS overlay.
            0 - GLOBAL HBM
            1 - LOCAL HBM
    -->
    <integer name="config_udfps_hbm_type">0</integer>

    <!-- The radius of the enrollment progress bar, in dp -->
    <integer name="config_udfpsEnrollProgressBar" translatable="false">115</integer>
</resources>